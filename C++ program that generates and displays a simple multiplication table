#include <iostream>

int main() {
    int number;

    std::cout << "Enter a number for the multiplication table: ";
    std::cin >> number;

    if (number <= 0) {
        std::cout << "Please enter a positive number." << std::endl;
    } else {
        std::cout << "Multiplication table for " << number << ":" << std::endl;
        for (int i = 1; i <= 10; ++i) {
            std::cout << number << " x " << i << " = " << (number * i) << std::endl;
        }
    }

    return 0;
}
